<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="mainView" xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.bussmann.fpr.gauss.gui.controllers.MainViewController">

    <GridPane fx:id="inputGrid" />

    <Button id="submitButton" onAction="#onCalculateButtonClick" text="Calculate" />

    <Button id="increaseSizeButton" onAction="#onIncreaseSizeButtonClick" text="Increase Matrix Size" />
    <Button id="decreaseSizeButton" onAction="#onDecreaseSizeButtonClick" text="Decrease Matrix Size" />
</VBox>
